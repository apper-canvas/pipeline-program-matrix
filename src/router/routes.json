          }
        ]
      }
    }
  },
  "/deals": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Deals require authentication",
            "rule": "authenticated"
          }
        ]
      }
    }
  },
  "/tasks": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Tasks require authentication",
            "rule": "authenticated"
          }
        ]
      }
    }
  },
  "/activities": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Activities require authentication",
            "rule": "authenticated"
          }
        ]
      }
    }
  }
